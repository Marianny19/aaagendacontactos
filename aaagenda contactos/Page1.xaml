<Page x:Class="Contactos.Page1"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Contactos"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d" Height="720" Width="1080" Background="Transparent">



    <Grid Margin="100">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Panel Izquierdo (Fondo turquesa) -->
        <Border Background="#623ed0" Padding="30" CornerRadius="30 0 0 30" Margin="-101,-99,72,-102">
            <StackPanel VerticalAlignment="Center">
                <fa:ImageAwesome Icon="UserCircle" Width="166" Height="166" Foreground="White"/>
                <TextBlock Text="Bienvenido/a" TextAlignment="Center" FontWeight="SemiBold" FontSize="50" Foreground="White"/>
                <TextBlock TextWrapping="Wrap" FontSize="20" TextAlignment="Center" Foreground="White" Margin="0 20 0 20" Text="Aquí puedes registrar un nuevo contacto."/>
                <!-- Botón con ícono -->
                <Button Style="{StaticResource buttonBlack}" Width="79" Height="50" HorizontalAlignment="Center">
                    <fa:ImageAwesome Icon="AngleRight" Width="30" Height="16" Foreground="Black"/>
                </Button>
            </StackPanel>
        </Border>
        <!-- Panel Derecho (Formulario) -->
        <Border Padding="20" Background="#E0E0E0" CornerRadius="0 30 30 0" Margin="278,-99,-99,-102" Grid.ColumnSpan="2">
            <Grid Margin="-91,0,0,0">
                <!-- Íconos de cerrar y minimizar -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 10 10 0">
                    <Button Click="CerrarVentana_Click" Width="50" Height="50" Background="Transparent" BorderThickness="0">
                        <fa:ImageAwesome Icon="Times" Width="50" Height="20" Foreground="Black"/>
                    </Button>


                </StackPanel>

                <!-- Formulario de contacto -->
                <Grid HorizontalAlignment="Left" VerticalAlignment="Center" Margin="224,0,0,0" Height="535">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <!-- Campos de entrada de datos -->
                    <TextBlock x:Name="Nombre" Grid.Row="0" Text="Nombre" Style="{StaticResource Text}" VerticalAlignment="Bottom" Grid.Column="1" Margin="20,0,-20,172"/>
                    <TextBox Grid.Row="0" Width="200" Height="30" Grid.ColumnSpan="2" Margin="103,36,67,137"/>

                    <TextBlock Text="Apellido" Style="{StaticResource Text}" Margin="20,75,50,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <TextBox Width="200" Height="30" Margin="103,100,67,73" Grid.ColumnSpan="2"/>

                    <TextBlock Text="Email" Style="{StaticResource Text}" Margin="30,142,40,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <TextBox Width="200" Height="30" Margin="103,163,67,10" Grid.ColumnSpan="2"/>

                    <TextBlock Grid.Row="2" Text="Tipo de contacto" Style="{StaticResource Text}" Grid.ColumnSpan="2" Margin="137,0,83,0" VerticalAlignment="Top" Grid.RowSpan="2"/>
                    <ComboBox x:Name="Tipo_contacto" Grid.Row="4" Width="200" Height="30" Margin="103,5,67,60" Grid.ColumnSpan="2">
                        <ComboBoxItem Content="Familiar"/>
                        <ComboBoxItem Content="Amigo"/>
                    </ComboBox>
                    <Button Content="Agregar tipo de contacto" HorizontalAlignment="Right"
        Grid.Column="1" Margin="0,193,-159,-91" Grid.Row="6" Background="#6F50FF"
        FontSize="12" FontWeight="SemiBold" Foreground="White" Width="157">
                        
                        
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="0.000"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Button.RenderTransform>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="0" 
                                CornerRadius="3">
                                                <!-- Ajusta el CornerRadius según lo desees -->
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>


                    <TextBlock Grid.Row="4" Text="Número de teléfono" Style="{StaticResource Text}" Grid.ColumnSpan="2" Margin="128,44,92,0" VerticalAlignment="Top"/>
                    <TextBox Grid.Row="4" Width="200" Height="30" Margin="103,65,67,0" Grid.ColumnSpan="2"/>

                    <TextBlock Grid.Row="5" Text="Tipo de red social" Style="{StaticResource Text}" Grid.ColumnSpan="2" Margin="137,10,83,0" VerticalAlignment="Top" Grid.RowSpan="2"/>
                    <ComboBox Name="Tipo_red_social" Grid.Row="6" Width="200" Height="30" Margin="103,37,67,71" Grid.ColumnSpan="2">
                        <ComboBoxItem Content="Facebook"/>
                        <ComboBoxItem Content="Twitter"/>
                        <ComboBoxItem Content="Instagram"/>
                    </ComboBox>
                    <Button x:Name="agregar_tipo_red_social" Content="Agregar tipo de red social"
        HorizontalAlignment="Right" Grid.Column="1" Margin="0,243,-159,-139" Grid.Row="6" Background="#6F50FF"
        FontSize="12" FontWeight="SemiBold" Foreground="White" Width="158">
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="0.000"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Button.RenderTransform>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="0" 
                                CornerRadius="3">
                                                <!-- Ajusta el CornerRadius según lo que desees -->
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>


                    <TextBlock Grid.Row="6" Text="Nombre de usuario" Style="{StaticResource Text}" Grid.ColumnSpan="2" Margin="132,69,96,0" VerticalAlignment="Top"/>
                </Grid>
                <TextBox Height="30" Margin="329,489,239,158"/>
                <Button x:Name="Registrar_contacto" Content="Registrar contacto" HorizontalAlignment="Left" 
        Margin="326,535,0,87" Background="#6F50FF" FontSize="22" Width="200" FontWeight="SemiBold" 
        Click="Registrar_contacto_Click" RenderTransformOrigin="0.5,0.5" Foreground="White">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="0.000"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Button.RenderTransform>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="0" 
                                CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

            </Grid>
        </Border>
    </Grid>
</Page>